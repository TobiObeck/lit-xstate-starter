{
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact", // Ensure ESLint runs for JSX if needed
        "typescript",
        "typescriptreact" // Ensure ESLint runs for TSX if needed
    ],
    // "editor.formatOnSave": true, // Enables formatting on save
    // "prettier.endOfLine": "lf", // Ensure LF line endings are enforced by Prettier
    // "files.eol": "\n" // Forces LF line endings in all files by VS Code
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    }      
}